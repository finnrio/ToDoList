<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainMenu.MainMenuController">
    <BorderPane fx:id="mainPane" prefHeight="400.0" prefWidth="600.0">
        <left>
            <VBox prefWidth="170">
                <Label text="What would you like to do?" />
                <VBox GridPane.rowIndex="1">
                    <Button onAction="#handleBtn1Action" text="Add to list" />
                    <Button onAction="#handleBtn2Action" text="Print list" />
                    <Button onAction="#handleBtn3Action" text="Option 3" />
                    <Button onAction="#handleQuitButtonAction" text="Quit" />
                </VBox>
            </VBox>
        </left>
    </BorderPane>
</AnchorPane>
